{
  "name": "vite-react-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npx vite",
    "build": "vite build",
    "build:production": "vite build --mode production",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:money": "playwright test tests/e2e/money-path-complete.spec.ts",
    "test:e2e:money:headed": "playwright test tests/e2e/money-path-complete.spec.ts --headed",
    "test:e2e:money:debug": "SLOW_MO=1 playwright test tests/e2e/money-path-complete.spec.ts --headed --debug",
    "test:visual": "playwright test tests/e2e/visual-regression.spec.ts",
    "test:a11y": "playwright test tests/e2e/accessibility.spec.ts",
    "test:axe": "node scripts/run-axe-tests.js",
    "test:axe:ci": "npm run build && npm run preview & sleep 5 && npm run test:axe",
    "lint": "eslint .",
    "lint:a11y": "npm run build && npx @axe-core/cli dist",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "lhci": "lhci autorun --config=lighthouserc.json",
    "lhci:local": "npm run build && npm run preview & npx wait-on http://localhost:4173 && lhci autorun",
    "lhci:report": "node scripts/generate-lhci-summary.js",
    "a11y:audit": "npm run build && npx @axe-core/cli dist --tags wcag2a,wcag2aa",
    "seo:validate": "npm run build && npx next-sitemap --config sitemap.config.js",
    "ci:all": "npm run lint && npm run test:unit && npm run test:e2e && npm run lint:a11y",
    "admin:create": "tsx scripts/create-admin-user.ts"
  },
  "dependencies": {
    "@sentry/react": "^10.15.0",
    "@sentry/vite-plugin": "^4.3.0",
    "@supabase/supabase-js": "^2.58.0",
    "dompurify": "^3.0.8",
    "lucide-react": "^0.344.0",
    "mammoth": "^1.11.0",
    "posthog-js": "^1.268.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^6.22.0"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.9.1",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.0.4",
    "autoprefixer": "^10.4.18",
    "axe-core": "^4.10.3",
    "eslint": "^9.9.1",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "eslint-plugin-testing-library": "^6.2.0",
    "globals": "^15.9.0",
    "jsdom": "^23.0.1",
    "lighthouse": "^11.7.1",
    "postcss": "^8.4.35",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vitest": "^1.0.4"
  }
}
